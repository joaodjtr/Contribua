{{#if data}}
<header>
    <div class="container">
        <a href="/home"><img class="logo" src="/assets/imgs/Contribua!.png" /></a>
        <div class="search-field">
            <form class="search-form">
                <img src="/assets/imgs/search.svg" />
                <input placeholder="Pesquisar" oninput="doSearch(this)" class="search-input" name="search-input"
