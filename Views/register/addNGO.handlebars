<style>
    body {
        background-image: linear-gradient(rgba(224, 234, 251, 0.2), rgba(224, 234, 251, 0.2)),url('../../assets/imgs/bg.jpg');
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }
</style>

<div class="centralize-auto padding-top4">
    <div class="centralize-auto box">
        <form class="form" id="form-registerNGO" name="form-registerNGO" action="/starting-ong/register" method="POST">
            <div class="block margin-btm2 ngoRegister">
                <span class="medium-text light-weight-text blue block">1° Passo</span>
                <h1 class="title">Dados da ONG</h1>
                <div class="icon-input"><input name="ngoName" class="form-input" type="text" placeholder="Nome"length="150" /></div>
                <div class="icon-input"><input name="ngoCNPJ" class="form-input" type="text"placeholder="CNPJ - __.___.___/____-__" maxlength="18" /></div>
                <div class="icon-input"><input name="ngoCEP" placeholder="CEP" class="form-input" type="text" maxlength="9"/></div>
                <div class="icon-input"><input name="ngoCity" placeholder="Cidade" class="form-input" type="text"/></div>
                <div class="icon-input"><input name="ngoDistrict" placeholder="Bairro" class="form-input" type="text"/></div>
                <div class="icon-input"><input name="ngoAddress" class="form-input" type="text"placeholder="Rua" length="200"/></div>
                <div class="icon-input"><input name="ngoAddressNumber" class="form-input" type="text" placeholder="Número" length="20"/></div>
                <div class="form-groupSelect">
                    <label class="form-label">Causas da ONG</label>
                    {{#each causes}}
                        <input name="categories" value="{{descCategory}}" type="checkbox" id="{{descCategory}}" class="form-checkbox">
                        <label for="{{descCategory}}" class="form-btnCheckbox">{{descCategory}}</label>
                    {{/each}}
                </div>
                <div class="display-flex justifyContent-end">
                    <div onclick="$('.ngoRegister').hide(); $('.ngoRegister:nth-child(2)').show()" class="btn-primary">Próximo</div>
                </div>
            </div>
            <div class="block margin-btm2 ngoRegister">
                <span class="medium-text light-weight-text blue block">2° Passo</span>
                <h1 class="title">Contato e registro</h1>
                <div class="icon-input"><input name="ngoTelephone" class="form-input" type="text"
                        placeholder="Telefone - (__) ____-____" maxlength="15" /></div>
                <div class="icon-input"><input name="ngoEmail" class="form-input" type="email"
                        placeholder="Email da ONG" length="200" /></div>
                <div class="icon-input"><input name="ngoUserName" class="form-input" type="text"
                        placeholder="Nome de usuário da ong" /></div>
                <div class="display-flex justifyContent-end">
                    <div onclick="$('.ngoRegister').hide(); $('.ngoRegister:nth-child(1)').show()" class="btn-secondary margin-right2">Voltar</div>
                    <div onclick="$('.ngoRegister').hide(); $('.ngoRegister:nth-child(3)').show()" class="btn-primary">Próximo</div>
                </div>
            </div>
            <div class="block margin-btm2 ngoRegister">
                <span class="medium-text light-weight-text blue block">3° Passo</span>
                <h1 class="title">Descrição da ONG</h1>
                <textarea name="ngoDescription" type="text" class="form-input form-textarea"
                    placeholder="Descreva brevemente sua ONG; Onde atua, trabalhos realizados, causas, etc"
                    length="5000" style="height: 300px"></textarea>
                <div class="display-flex justifyContent-end">
                    <div onclick="$('.ngoRegister').hide(); $('.ngoRegister:nth-child(2)').show()" class="btn-secondary margin-right2">Voltar</div>
                    <button name="registerNGO-submit" id="registerNGO-submit" class="btn-primary">Próximo</button>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="/scripts/validations.js"></script>
<script src="/scripts/globalScript.js"></script>
<script src="/scripts/addNGOScript.js"></script>
<script>hide( "ngoRegister" ); show( "ngoRegister", 0 )</script>