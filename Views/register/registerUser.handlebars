<style>
    body {
        background-image: linear-gradient(rgba(224, 234, 251, 0.2), rgba(224, 234, 251, 0.2)), url('../../assets/imgs/bg.jpg');
        background-size: cover;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }
</style>

<div class="centralize padding-4 border-box">
    <form class="form box" id="form-registerUser" name="form-registerUser" action="/register/registerUser"
        method="POST">
        <h1 class="form-title">Cadastro de voluntário</h1>
        <div class="icon-input"><input class="form-input" name="nameVolunteer" placeholder="Primeiro Nome"
                type="text" /></div>
        <div class="icon-input"><input class="form-input" name="lastNameVolunteer" placeholder="Sobrenome"
                type="text" /></div>
        <div class="icon-input"><input class="form-input" name="emailVolunteer" placeholder="Email" type="email" />
        </div>
        <div class="icon-input"><input class="form-input" name="userNameVolunteer" placeholder="Nome de usuário"
                type="text" /></div>
        <div class="icon-input"><input class="form-input" name="cpfVolunteer" placeholder="CPF - ___.___.___-__"
                type="text" maxlength="14" /></div>
        <div class="icon-input"><input class="form-input" name="cepVolunteer" placeholder="CEP" maxlength="9" /></div>
        <div class="icon-input"><input class="form-input" name="cityVolunteer" placeholder="Cidade" /></div>
        <div class="icon-input"><input class="form-input" name="districtVolunteer" placeholder="Bairro" /></div>
        <div class="icon-input"><input class="form-input" name="addressVolunteer" placeholder="Rua"></div>
        <Div class="icon-input">
            <label class="form-label">Data de nascimento</label>
            <input class="form-input" placeholder="Data de nascimento" name="dateBornVolunteer" type="date" />
        </Div>
        <div class="form-groupSelect margin-top2">
            <label class="form-label">Causas</label>

            {{#each causes}}
            <input name="categories" value="{{descCategory}}" type="checkbox" id="{{descCategory}}"
                class="form-checkbox">
            <label for="{{descCategory}}" class="form-btnCheckbox">{{descCategory}}</label>
            {{/each}}
        </div>
        <div class="icon-input"><input class="form-input" name="passwordVolunteer" placeholder="Senha"
                type="password" /></div>
        <div class="icon-input"><input class="form-input" name="confirmPasswordVolunteer" placeholder="Confirmar senha"
                type="password" /></div>
        <button class="margin-top2" type="submit" id="submit">Registrar-se</button>
        <span class="form-link form-span-text"><a href="/" class="form-link-register">Já tenho uma
                conta</a></span>
        <span class="form-link form-span-text"><a href="/register/addNGO" class="form-link-register">Sou uma
                ONG</a></span>
    </form>
</div>

<script src="/scripts/validations.js"></script>
<script src="/scripts/registerUserScript.js"></script>